<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.HomeScreen">

    <TextView
        android:id="@+id/bank_title"
        android:layout_width="200dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/raleway_extrabold"
        android:text="The Sparks Banking App"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="68dp"
        android:layout_width="261dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/banklogo" />

    <Button
        android:id="@+id/all_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="80dp"
        android:backgroundTint="#487C77"
        android:fontFamily="@font/poppins_medium"
        android:onClick="showAllUsers"
        android:text="@string/all_users"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/all_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:backgroundTint="#487C77"
        android:fontFamily="@font/poppins_medium"
        android:onClick="showAllTransactions"
        android:text="@string/all_transactions"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>